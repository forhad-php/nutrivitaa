{{ 'counter-area.css' | asset_url | stylesheet_tag }}

<section class="counter-area">
  <img
    src="https://cdn.shopify.com/s/files/1/0763/3643/1325/files/counter-bottom-shape.png?v=1751872013"
    alt="Shape"
    class="counter-bottom-shape"
  >
  <h2 class="counter-area-title">
    {{ section.settings.heading }}
  </h2>
  <div class="counter-area-wrapper">
    {% for block in section.blocks %}
      <div class="counter-card">
        <h3>{{ block.settings.counter_number }}</h3>
        <p>{{ block.settings.counter_label }}</p>
      </div>
    {% endfor %}
  </div>
  <div class="sticker-img-area">
    <img
      src="https://cdn.shopify.com/s/files/1/0763/3643/1325/files/Sticker.png?v=1751872915"
      alt="stiker"
      class="sticker-img"
    >
  </div>
</section>

{% schema %}
{
  "name": "Counter Area",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "P.S While you were reading this we sold about 200 PB Jars"
    }
  ],
  "blocks": [
    {
      "type": "counter",
      "name": "Counter Card",
      "settings": [
        {
          "type": "text",
          "id": "counter_number",
          "label": "Counter Number",
          "default": "2345+"
        },
        {
          "type": "text",
          "id": "counter_label",
          "label": "Counter Label",
          "default": "Products sold"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Counter Area",
      "blocks": [
        {
          "type": "counter",
          "settings": {
            "counter_number": "2345+",
            "counter_label": "Products sold"
          }
        },
        {
          "type": "counter",
          "settings": {
            "counter_number": "1200+",
            "counter_label": "Happy Customers"
          }
        },
        {
          "type": "counter",
          "settings": {
            "counter_number": "98%",
            "counter_label": "Satisfaction Rate"
          }
        }
      ]
    }
  ]
}
{% endschema %}
