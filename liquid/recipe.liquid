{{ 'recipe.css' | asset_url | stylesheet_tag }}

<div class="recipe-blog-area">
  <h2>{{ section.settings.heading }}</h2>

  <div
    class="swiper recipe-blog-slider"
    data-slides-mobile="{{ section.settings.slides_mobile }}"
    data-slides-tablet="{{ section.settings.slides_tablet }}"
    data-slides-desktop="{{ section.settings.slides_desktop }}"
    data-slides-large="{{ section.settings.slides_large }}"
  >
    <div class="swiper-wrapper">
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          <div class="swiper-slide" {{ block.shopify_attributes }}>
            <div class="recipe-image-area">
              {% if block.settings.image %}
                <a href="{{ block.settings.link | default: '#' }}">
                  <img src="{{ block.settings.image | image_url: width: 600 }}" alt="Slide Image">
                </a>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      {% else %}
        <p>No slides found. Please add blocks in the section settings.</p>
      {% endif %}
    </div>

    <div class="slider-buttons">
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Recipe Image Slider",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Stock up on your favorite recipe"
    },
    {
      "type": "range",
      "id": "slides_mobile",
      "min": 1,
      "max": 3,
      "step": 1,
      "label": "Slides per view (Mobile: 0px–600px)",
      "default": 1
    },
    {
      "type": "range",
      "id": "slides_tablet",
      "min": 1,
      "max": 4,
      "step": 1,
      "label": "Slides per view (Tablet: 601px–991px)",
      "default": 2
    },
    {
      "type": "range",
      "id": "slides_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Slides per view (Desktop: 992px–1920px)",
      "default": 4
    },
    {
      "type": "range",
      "id": "slides_large",
      "min": 1,
      "max": 8,
      "step": 1,
      "label": "Slides per view (Large: >1920px)",
      "default": 5
    }
  ],
  "blocks": [
    {
      "type": "image_link",
      "name": "Slide Image with Link",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Upload Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Image Link (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Recipe Image Slider",
      "blocks": []
    }
  ]
}
{% endschema %}
